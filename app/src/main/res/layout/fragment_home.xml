<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="com.example.neoweather.viewmodel.NeoWeatherViewModel" />
        <variable
            name="weatherCodeMapping"
            type="com.example.neoweather.model.WeatherCodeMapping" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.neoweather.view.HomeFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/weather_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:padding="10dp"
                    android:layout_marginTop="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:text="@{weatherCodeMapping.mapping[viewModel.currentWeather.weatherCode]}"
                    tools:text="Cloudy"/>

                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    android:padding="10dp"
                    android:layout_below="@id/weather_main"
                    android:layout_centerHorizontal="true"
                    android:text="@{viewModel.doubleToString(viewModel.currentWeather.temperature)}"
                    tools:text="36C"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:padding="10dp"
                    android:layout_below="@+id/temp"
                    android:layout_centerHorizontal="true"
                    android:text="@{viewModel.currentWeather.time}"
                    tools:text="12:00"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hourly_forecast_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="8dp"
                        app:hourlyData="@{viewModel.hourlyForecast}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/daily_forecast_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:padding="8dp"
                        app:dailyData="@{viewModel.dailyForecast}"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:apiStatus="@{viewModel.status}"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>